{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "typeRoots": ["types/next-auth.d.ts", "types/global.d.ts"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@app/*": ["./src/*"],
      "@app/home/*": ["./src/app/(home)/*"],
      "@app/account/*": ["./src/app/(home)/account/*"],
      "@app/order/recommendations/*": ["./src/app/(home)/recommendations/[orderId]/*"],
      "@app/orders/*": ["./src/app/(home)/orders/*"],
      "@app/dashboard/*": ["./src/app/(home)/dashboard/*"],
      "@app/profile/*": ["./src/app/(home)/profile/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "prisma"]
}
